@{
    ViewData["Title"] = $"{User.Identity!.Name}'s Cart | Food Delivery & Shipping Service | ShopeeFood.vn";
}

<div class="cart-empty-main-section d-flex align-items-center justify-content-center">
    <div class="d-flex align-items-center">
        <div class="me-4">
            <img alt="" src="~/images/empty-cart.png" />
        </div>
        
        <div class="d-flex flex-column">
            <h4 class="mb-2">Giỏ hàng trống trơn bạn ơi</h4>
            <p>Vào <a asp-controller="Store" asp-action="Promotions">đây</a> để tìm món bạn thích nào</p>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="~/js/cart.js" asp-append-version="true"></script>
}
